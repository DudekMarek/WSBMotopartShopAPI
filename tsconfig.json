{
  "compilerOptions": {
    "esModuleInterop": true,
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "target": "ES5",
      "module": "System",
      "moduleResolution": "Bundler",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      // For schemas to work properly
      "strictPropertyInitialization": true,
      "experimentalDecorators": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}